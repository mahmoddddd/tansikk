@model IEnumerable<TansiqyV1.BLL.ModelVM.DepartmentViewModel>
@using TansiqyV1.PL.Helpers
@{
    ViewData["Title"] = "التخصصات المتاحة";
    var collegeId = ViewBag.CollegeId;
    var collegeName = ViewBag.CollegeName;
    var universityId = ViewBag.UniversityId;
    var universityName = ViewBag.UniversityName;
}

<div class="container-fluid py-4">
    <!-- Back Navigation -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <a href="@Url.Action("Colleges", "Universities", new { id = universityId })" class="text-decoration-none text-dark">
            <i class="fas fa-arrow-right me-2"></i> العودة
        </a>
        <span class="text-muted">|</span>
        <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-dark">
            <i class="fas fa-home me-2"></i> الرئيسية
        </a>
    </div>

    <!-- Header -->
    <div class="mb-4">
        <h2 class="mb-2">التخصصات المتاحة</h2>
        <p class="text-muted mb-0">
            <i class="fas fa-university me-2"></i>@universityName
            <span class="mx-2">|</span>
            <i class="fas fa-graduation-cap me-2"></i>@collegeName
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var dept in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="info-card">
                        <div class="d-flex align-items-start">
                            <div class="info-card-icon bg-primary me-3" style="width: 50px; height: 50px; flex-shrink: 0;">
                                <i class="fas fa-plus text-white"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">@dept.NameAr</h5>
                                @if (!string.IsNullOrEmpty(dept.NameEn))
                                {
                                    <p class="text-muted small mb-2">@dept.NameEn</p>
                                }
                                @if (dept.StudyType.HasValue)
                                {
                                    <span class="badge bg-info mb-2">
                                        <i class="fas fa-book me-1"></i>@EnumHelper.GetStudyTypeName((TansiqyV1.DAL.Enums.StudyType?)dept.StudyType)
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(dept.Description))
                                {
                                    <p class="text-muted small mb-0">@dept.Description</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>لا توجد تخصصات متاحة</h4>
            <p>لم يتم العثور على أي تخصصات لهذه الكلية.</p>
        </div>
    }
</div>
