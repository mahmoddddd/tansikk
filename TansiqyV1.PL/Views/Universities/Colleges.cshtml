@model IEnumerable<TansiqyV1.BLL.ModelVM.CollegeViewModel>
@using TansiqyV1.PL.Helpers
@{
    ViewData["Title"] = "كليات الجامعة";
    var universityId = ViewBag.UniversityId;
}

<div class="container-fluid py-4">
    <!-- Back Navigation -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <a href="@Url.Action("Details", "Universities", new { id = universityId })" class="text-decoration-none text-dark">
            <i class="fas fa-arrow-right me-2"></i> العودة
        </a>
        <span class="text-muted">|</span>
        <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-dark">
            <i class="fas fa-home me-2"></i> الرئيسية
        </a>
    </div>

    <h2 class="mb-4">كليات الجامعة</h2>
    
    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var college in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="college-card">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="mb-0 fw-bold">@college.NameAr</h5>
                            @if (college.DepartmentsCount > 0)
                            {
                                <span class="badge bg-success">@college.DepartmentsCount تخصص</span>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(college.NameEn))
                        {
                            <p class="text-muted small mb-2">@college.NameEn</p>
                        }
                        
                        <div class="mb-3">
                            @if (college.Fees.HasValue)
                            {
                                <p class="mb-1">
                                    <i class="fas fa-money-bill-wave text-success me-2"></i>
                                    <strong>المصاريف:</strong> @college.Fees.Value.ToString("N0") جنيه
                                </p>
                            }
                            @if (college.LastYearCoordination.HasValue)
                            {
                                <p class="mb-1">
                                    <i class="fas fa-percentage text-warning me-2"></i>
                                    <strong>التنسيق:</strong> @college.LastYearCoordination.Value%
                                </p>
                            }
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Departments", "Universities", new { id = college.Id })" class="btn btn-primary btn-sm flex-grow-1">
                                <i class="fas fa-list me-2"></i> عرض التخصصات
                            </a>
                            <a href="@Url.Action("CollegeDetails", "Universities", new { id = college.Id })" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>لا توجد كليات متاحة</h4>
            <p>لم يتم العثور على أي كليات لهذه الجامعة.</p>
        </div>
    }
</div>

