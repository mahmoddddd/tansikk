@model TansiqyV1.BLL.ModelVM.CreateCollegeDto
@{
    ViewData["Title"] = "إضافة كلية جديدة";
    var universityId = ViewBag.UniversityId ?? Model.UniversityId;
}

<div class="container-fluid py-4">
    <h2 class="mb-4">إضافة كلية جديدة</h2>

    <form asp-action="CreateCollege" method="post" class="bg-white rounded p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input asp-for="UniversityId" type="hidden" value="@universityId" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="NameAr" class="form-label">اسم الكلية بالعربي *</label>
                <input asp-for="NameAr" class="form-control" />
                <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="NameEn" class="form-label">اسم الكلية بالإنجليزي</label>
                <input asp-for="NameEn" class="form-control" />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="OfficialWebsite" class="form-label">الموقع الرسمي</label>
                <input asp-for="OfficialWebsite" class="form-control" type="url" />
                <span asp-validation-for="OfficialWebsite" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Location" class="form-label">الموقع</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Fees" class="form-label">المصاريف (جنيه)</label>
                <input asp-for="Fees" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Fees" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LastYearCoordination" class="form-label">التنسيق (%)</label>
                <input asp-for="LastYearCoordination" class="form-control" type="number" step="0.01" min="0" max="100" />
                <span asp-validation-for="LastYearCoordination" class="text-danger"></span>
            </div>

            <!-- مصروفات بفئات -->
            <div class="col-12">
                <h5 class="mb-3">مصروفات بفئات (للجامعات الأهلية والأجنبية)</h5>
            </div>
            <div class="col-md-4">
                <label asp-for="FeesCategoryA" class="form-label">فئة أ (جنيه)</label>
                <input asp-for="FeesCategoryA" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="FeesCategoryA" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="FeesCategoryB" class="form-label">فئة ب (جنيه)</label>
                <input asp-for="FeesCategoryB" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="FeesCategoryB" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="FeesCategoryC" class="form-label">فئة ج (جنيه)</label>
                <input asp-for="FeesCategoryC" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="FeesCategoryC" class="text-danger"></span>
            </div>

            <!-- مصروفات بالساعة -->
            <div class="col-12">
                <h5 class="mb-3">مصروفات بالساعة (للمعاهد العالية)</h5>
            </div>
            <div class="col-md-4">
                <label asp-for="FeesPerHour" class="form-label">مصروفات الساعة (جنيه)</label>
                <input asp-for="FeesPerHour" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="FeesPerHour" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="MinimumHoursPerSemester" class="form-label">الحد الأدنى للساعات</label>
                <input asp-for="MinimumHoursPerSemester" class="form-control" type="number" min="1" />
                <span asp-validation-for="MinimumHoursPerSemester" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="AdditionalFees" class="form-label">مصروفات إضافية (جنيه)</label>
                <input asp-for="AdditionalFees" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="AdditionalFees" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Description" class="form-label">الوصف</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> حفظ
            </button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">إلغاء</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}








