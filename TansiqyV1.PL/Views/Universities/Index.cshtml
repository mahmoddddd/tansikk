@model IEnumerable<TansiqyV1.BLL.ModelVM.UniversityViewModel>
@using TansiqyV1.PL.Helpers
@{
    ViewData["Title"] = "الجامعات";
    var universityType = ViewBag.UniversityType;
    var typeNames = new Dictionary<int, string>
    {
        { 1, "الجامعات الحكومية" },
        { 2, "الجامعات الخاصة" },
        { 3, "الجامعات الأهلية" },
        { 4, "المعاهد العالية" },
        { 5, "الجامعات الأجنبية" },
        { 6, "الجامعات التكنولوجية" }
    };
    var typeBadgeClasses = new Dictionary<int, string>
    {
        { 1, "badge-governmental" },
        { 2, "badge-private" },
        { 3, "badge-national" },
        { 4, "badge-institute" },
        { 5, "badge-foreign" },
        { 6, "badge-technological" }
    };
}

<div class="container-fluid py-4">
    <!-- Sidebar -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="bg-white rounded p-3 shadow-sm">
                <div class="d-flex flex-column gap-2 mb-3">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-dark">
                        <i class="fas fa-arrow-right me-2"></i> العودة
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-dark">
                        <i class="fas fa-home me-2"></i> الرئيسية
                    </a>
                </div>
                <h6 class="mb-0">@(typeNames.ContainsKey(universityType) ? typeNames[universityType] : "الجامعات")</h6>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">عدد النتائج @Model.Count() جامعة</h4>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="row g-3">
                    @foreach (var university in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="university-card bg-white rounded p-3 h-100">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold">@university.NameAr</h5>
                                    <span class="badge-type @(typeBadgeClasses.ContainsKey((int)university.Type) ? typeBadgeClasses[(int)university.Type] : "")">
                                        @EnumHelper.GetUniversityTypeName((TansiqyV1.DAL.Enums.UniversityType)university.Type)
                                    </span>
                                </div>

                                <div class="d-flex align-items-center text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <small>@EnumHelper.GetGovernorateName((TansiqyV1.DAL.Enums.Governorate)university.Governorate)</small>
                                </div>

                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-success text-white rounded px-2 py-1 me-2">
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                    <span class="fw-bold">@university.CollegesCount كلية</span>
                                </div>

                                <a href="@Url.Action("Details", "Universities", new { id = university.Id })"
                                   class="btn btn-primary btn-sm w-100">
                                    عرض التفاصيل
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h4>لا توجد جامعات متاحة</h4>
                    <p>لم يتم العثور على أي جامعات من النوع المحدد.</p>
                </div>
            }
        </div>
    </div>
</div>
