@model TansiqyV1.BLL.ModelVM.UniversityViewModel
@using TansiqyV1.PL.Helpers
@{
    ViewData["Title"] = Model.NameAr;
    var typeNames = new Dictionary<int, string>
    {
        { 1, "الجامعات الحكومية" },
        { 2, "الجامعات الخاصة" },
        { 3, "الجامعات الأهلية" },
        { 4, "المعاهد العالية" },
        { 5, "الجامعات الأجنبية" },
        { 6, "الجامعات التكنولوجية" }
    };
}

<div class="container-fluid py-4">
    <!-- Back Navigation -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <a href="@Url.Action("Index", "Universities", new { type = (int)Model.Type })" class="text-decoration-none text-dark">
            <i class="fas fa-arrow-right me-2"></i> العودة
        </a>
        <span class="text-muted">|</span>
        <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-dark">
            <i class="fas fa-home me-2"></i> الرئيسية
        </a>
    </div>

    <!-- University Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2 class="mb-2">@Model.NameAr</h2>
            @if (!string.IsNullOrEmpty(Model.NameEn))
            {
                <p class="text-muted mb-0">@Model.NameEn</p>
            }
        </div>
        <div class="bg-success text-white rounded px-3 py-2">
            <i class="fas fa-graduation-cap me-2"></i>
            <span class="fw-bold">@Model.CollegesCount كلية متاحة</span>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- نبذة عن الجامعة -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="info-card">
                    <div class="d-flex align-items-center mb-3">
                        <div class="info-card-icon bg-primary">
                            <i class="fas fa-book"></i>
                        </div>
                        <h5 class="mb-0">نبذة عن الجامعة</h5>
                    </div>
                    <p class="text-muted">@Model.Description</p>
                </div>
            }

            <!-- التخصصات المتاحة -->
            @if (Model.Colleges != null && Model.Colleges.Any())
            {
                <div class="info-card">
                    <div class="d-flex align-items-center mb-3">
                        <div class="info-card-icon" style="background-color: #6f42c1;">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h5 class="mb-0">التخصصات المتاحة</h5>
                    </div>
                    <div class="row g-2">
                        @foreach (var college in Model.Colleges)
                        {
                            @foreach (var dept in college.Departments)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-2 border rounded">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span>@dept.NameAr</span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Colleges", "Universities", new { id = Model.Id })" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list me-2"></i> عرض جميع الكليات والتخصصات
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- التنسيق -->
            <div class="info-card">
                <div class="d-flex align-items-center mb-3">
                    <div class="info-card-icon" style="background-color: #ffc107;">
                        <i class="fas fa-scroll"></i>
                    </div>
                    <h5 class="mb-0">التنسيق</h5>
                </div>
                <ul class="list-unstyled mb-0">
                    @if (Model.LastYearCoordination.HasValue)
                    {
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            يختلف حسب الكلية من @Model.LastYearCoordination.Value% إلى 98%
                        </li>
                    }
                    <li class="mb-2">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        يتم القبول حسب مكتب التنسيق الإلكتروني
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                        قد تتطلب بعض الكليات اختبارات قدرات
                    </li>
                </ul>
            </div>

            <!-- المصاريف -->
            <div class="info-card">
                <div class="d-flex align-items-center mb-3">
                    <div class="info-card-icon bg-success">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <h5 class="mb-0">المصاريف</h5>
                </div>
                <ul class="list-unstyled mb-0">
                    @if (Model.Type == (int)TansiqyV1.DAL.Enums.UniversityType.Governmental)
                    {
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            مجانية (رسوم رمزية)
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-info-circle text-info me-2"></i>
                            رسوم التسجيل السنوية حوالي 1000-2000 جنيه
                        </li>
                    }
                    else if (Model.Fees.HasValue)
                    {
                        <li class="mb-2">
                            <i class="fas fa-money-bill-wave text-primary me-2"></i>
                            المصاريف السنوية: @Model.Fees.Value.ToString("N0") جنيه
                        </li>
                    }
                    else
                    {
                        <li class="mb-2">
                            <i class="fas fa-info-circle text-info me-2"></i>
                            تختلف المصاريف حسب الكلية
                        </li>
                    }
                </ul>
            </div>

            <!-- الموقع الجغرافي -->
            <div class="info-card">
                <div class="d-flex align-items-center mb-3">
                    <div class="info-card-icon bg-danger">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h5 class="mb-0">الموقع الجغرافي</h5>
                </div>
                <p class="mb-2">
                    <i class="fas fa-location-dot text-danger me-2"></i>
                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <text>@Model.Location،</text>
                    }
                    @EnumHelper.GetGovernorateName((TansiqyV1.DAL.Enums.Governorate)Model.Governorate)
                </p>
                <button class="btn btn-danger btn-sm">
                    <i class="fas fa-map me-2"></i> عرض على الخريطة
                </button>
            </div>

            <!-- الموقع الإلكتروني -->
            @if (!string.IsNullOrEmpty(Model.OfficialWebsite))
            {
                <div class="info-card">
                    <div class="d-flex align-items-center mb-3">
                        <div class="info-card-icon bg-primary">
                            <i class="fas fa-globe"></i>
                        </div>
                        <h5 class="mb-0">الموقع الإلكتروني</h5>
                    </div>
                    <a href="@Model.OfficialWebsite" target="_blank" class="text-decoration-none">
                        @Model.OfficialWebsite
                        <i class="fas fa-external-link-alt ms-2"></i>
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Admin Actions -->
    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
    {
        <div class="mt-4 p-3 bg-warning bg-opacity-10 rounded">
            <h5 class="mb-3">إدارة الجامعة</h5>
            <div class="d-flex gap-2 flex-wrap">
                <a href="@Url.Action("Edit", "Universities", new { id = Model.Id })" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i> تعديل
                </a>
                <a href="@Url.Action("CreateCollege", "Universities", new { universityId = Model.Id })" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i> إضافة كلية
                </a>
                <button type="button" class="btn btn-danger" onclick="deleteUniversity(@Model.Id)">
                    <i class="fas fa-trash me-2"></i> حذف
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteUniversity(id) {
            if (confirm('هل أنت متأكد من حذف هذه الجامعة؟')) {
                fetch(`${apiBaseUrl}/api/Universities/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '@Url.Action("Index", "Home")';
                    } else {
                        alert('حدث خطأ أثناء حذف الجامعة');
                    }
                });
            }
        }
    </script>
}
