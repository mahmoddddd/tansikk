<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - تنسيقي</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TansiqyV1.PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @inject Microsoft.Extensions.Configuration.IConfiguration Configuration
    <script>
        // Global API Base URL from appsettings
        const apiBaseUrl = '@Configuration["ApiSettings:BaseUrl"]';
    </script>
</head>
<body>
    <!-- Top Header Bar -->
    <div class="bg-dark text-white py-2">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="me-3">AI</span>
                <div class="dropdown">
                    <a class="text-white text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        تنسيقي
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                        <li><a class="dropdown-item" asp-controller="Universities" asp-action="SelectType">أنواع الجامعات</a></li>
                    </ul>
                </div>
            </div>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-sm btn-outline-light">
                    <i class="fas fa-share-alt"></i> مشاركة
                </button>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Account" asp-action="Logout" class="text-white text-decoration-none">
                        <i class="fas fa-user-cog"></i>
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Main Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            <div class="d-flex align-items-center w-100">
                <!-- Search Bar -->
                <div class="flex-grow-1 me-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="بحث..." id="globalSearch">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>

                <!-- Navigation Links -->
                <ul class="navbar-nav d-flex flex-row gap-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active text-primary fw-bold" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-graduation-cap me-1"></i> تنسيقي
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active text-primary fw-bold" : "")"
                           asp-controller="Home" asp-action="Index">الرئيسية</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "SelectType" ? "active text-primary fw-bold" : "")"
                           asp-controller="Universities" asp-action="SelectType">أنواع الجامعات</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Search" ? "active text-primary fw-bold" : "")"
                           asp-controller="Universities" asp-action="Search">بحث مخصص لك</a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active text-primary fw-bold" : "")"
                               asp-controller="Users" asp-action="Index">إدارة المستخدمين</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="bg-light min-vh-100">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0">&copy; 2025 - تنسيقي - جميع الحقوق محفوظة</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
